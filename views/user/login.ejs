<% layout('layouts/boilerplate') %>

<div class="container">
  <div class="col-md-6 offset-md-3">
    <div class="card shadow my-5">
      <div class="card-body">
        <h3 class="card-title">login to <span class="fw-bold">museo</span></h3>
        <form action="/login" method="post" novalidate class="needs-validation">
          <div class="form-floating my-3">
            <input type="text" id="username" name="username" class="form-control" required autofocus placeholder="username">
            <label for="username">username:</label>
          </div>
          <div class="form-floating my-3">
            <input type="password" name="password" id="password" class="form-control" placeholder="password" required>
            <label for="password" class="form-label">password:</label>
          </div>
          <div class="d-grid">
            <button class="btn">login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>