<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/css/newArtistForm.css">

<div class="container">
  <div class="card shadow my-5">
    <div class="card-body">
      <h3 class="card-title"><a href="/artists/<%= artist._id %>"><i class="bi bi-chevron-left" id="backButton"></i></a>editing <span class="fw-bold"><%= artist.name %></span></h3>

      <form action="#" method="post" class="needs-validation" enctype="multipart/form-data" id="newArtistForm" novalidate>
        <div class="row my-3">
          <div class="container-fluid">
            <div class="form-floating my-3">
              <input type="text" id="artistName" class="form-control" name="artist[name]" placeholder="name" value="<%= artist.name %>" required>
              <label for="artistName" class="form-label">name:</label>
            </div>
          </div>
        </div>
        <div class="input-group my-3">
          <div class="form-floating">
            <input type="number" class="form-control" placeholder="born after" aria-label="born after" name="artist[bornDate]" id="bornYear" value="<%= artist.bornDate %>" required>
            <label for="bornYear">birth year</label>
          </div>
          <span class="input-group-text">-</span>
          <div class="form-floating">
            <input type="number" class="form-control" placeholder="died before" aria-label="died before" name="artist[deathDate]" id="deathYear" value="<%= artist.deathDate %>">
            <label for="deathYear">death year</label>
          </div>
        </div>
        <div class="d-grid">
          <button class="btn">submit <span class="fw-bold">edits</span></button>
        </div>
      </form>
    </div>
  </div>
</div>
