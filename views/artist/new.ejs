<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/css/newArtistForm.css">

<div class="container">
  <div class="card shadow my-5">
    <div class="card-body">
      <h3 class="card-title">new <span class="fw-bold">artist</span></h3>

      <form action="#" method="post" class="needs-validation" enctype="multipart/form-data" id="newArtistForm" novalidate>
        <div class="row my-3">
          <div class="container-fluid">
            <div class="form-floating my-3">
              <input type="text" id="artistName" class="form-control" name="artist[name]" placeholder="name" required>
              <label for="artistName" class="form-label">name:</label>
            </div>
          </div>
        </div>
        <div class="row my-3" id="imageOptionsContainer">
          <div class="container">
            <h4>how would you like to add an image?</h4>
            <div class="container-fluid d-flex justify-content-around">
              <div class="form-check">
                <input type="radio" class="form-check-input" name="imageOptions" id="uploadImageBtn">
                <label for="uploadImageBtn" class="form-check-label">file upload:</label>
              </div>
              <div class="form-check">
                <input type="radio" class="form-check-input" name="imageOptions" id="imageUrlBtn">
                <label for="imageUrlBtn" class="form-check-label">image url:</label>
              </div>
            </div>
          </div>
        </div>
        <div class="row my-3" id="imageInputsContainer">
          <div class="col my-3" id="imageUploadContainer">
            <label for="image" class="form-label">upload image:</label>
            <input type="file" name="image" class="form-control" id="image" required>
          </div>
          <div class="col my-3" id="imageUrlContainer">
            <div class="form-floating">
              <input type="text" class="form-control" id="imageUrl" name="imageUrl" placeholder="url">
              <label for="imageUrl" class="form-label">image url:</label>
            </div>
          </div>
        </div>
        <div class="input-group my-3">
          <div class="form-floating">
            <input type="number" class="form-control" placeholder="born after" aria-label="born after" name="artist[bornDate]" id="bornYear" required>
            <label for="bornYear">birth year</label>
          </div>
          <span class="input-group-text">-</span>
          <div class="form-floating">
            <input type="number" class="form-control" placeholder="died before" aria-label="died before" name="artist[deathDate]" id="deathYear">
            <label for="deathYear">death year</label>
          </div>
        </div>
        <div class="d-grid">
          <button class="btn">submit <span class="fw-bold">artist</span></button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/newArtistForm.js"></script>