<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/css/newArtworkForm.css">

<div class="modal fade" id="warningModal" tabindex="1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">museo</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-center">to submit an artwork, the artist and museum must already be on <span class="fw-bold">museo</span></p>
            </div>
            <div class="modal-footer">
                <button class="btn" data-bs-dismiss="modal">close</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="card shadow my-5">
        <div class="card-body">
            <h3 class="card-title">new <span class="fw-bold">artwork</span></h3>
            <form action="#" class="needs-validation" method="post" enctype="multipart/form-data" id="newArtworkForm" novalidate>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-floating my-3">
                            <input type="text" name="artwork[title]" id="artworkTitle" class="form-control" placeholder="title" required>
                            <label for="artworkTitle" class="form-label">title:</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating my-3">
                            <input type="number" name="artwork[year]" class="form-control" id="year" placeholder="year" required>
                            <label for="year" class="form-label">year:</label>
                        </div>
                    </div>
                </div>
                <div class="row" id="imageOptionsContainer">
                    <div class="container">
                        <h4>how would you like to add an image?</h4>
                        <div class="container-fluid d-flex justify-content-around">
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="imageOptions" id="uploadImageBtn">
                                <label for="uploadImageBtn" class="form-check-label">file upload:</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="imageOptions" id="imageUrlBtn">
                                <label for="imageUrlBtn" class="form-check-label">image url:</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" id="imageInputsContainer">
                    <div class="col my-3" id="imageUploadContainer">
                        <label for="image" class="form-label">upload image:</label>
                        <input type="file" name="image" class="form-control" id="image" required>
                    </div>
                    <div class="col my-3" id="imageUrlContainer">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="imageUrl" name="imageUrl" placeholder="url">
                            <label for="imageUrl" class="form-label">image url:</label>
                        </div>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-lg-6 my-3">
                        <label for="artistName">artist:</label>
                        <input class="form-select" name="artistName" id="artistName" list="artistNames" autocomplete="on" required>
                        <datalist id="artistNames">
                            <% for (let artistName of artistNames) {%>
                                <option><%= artistName %></option>
                            <% } %>
                        </datalist>
                    </div>
                    <div class="col-lg-6 my-3">
                        <label for="museumName">museum:</label>
                        <input class="form-select" name="museumName" id="museumName" list="museumNames" required>
                        <datalist id="museumNames">
                            <% for (let museumName of museumNames) {%>
                                <option><%= museumName %></option>
                            <% } %>
                        </datalist>
                    </div>
                </div>
                <div class="d-grid">
                    <button class="btn">submit <span class="fw-bold">artwork</span></button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    window.onload = () => {
        const myModal = new bootstrap.Modal('#warningModal');
        myModal.show()
    }
</script>

<script src="/js/newArtworkForm.js"></script>